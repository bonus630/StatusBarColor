<UserControl x:Class="StatusBarColor.ControlUI"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:StatusBarColor"
             mc:Ignorable="d" 
           >

    <StackPanel Orientation="Horizontal">
        <Label Content="C:" />
        <local:NumericTextBoxMS x:Name="ntb_C" Value="0" MinimumValue="0" MaxValue="100" ValueChangedEvent="ntb_C_ValueChangedEvent" Width="40"/>
        <Label Content="Y:" />
        <local:NumericTextBoxMS x:Name="ntb_Y" Value="0" MinimumValue="0" MaxValue="100" ValueChangedEvent="ntb_Y_ValueChangedEvent" Width="40"/>
        <Label Content="M:" />
        <local:NumericTextBoxMS x:Name="ntb_M" Value="0" MinimumValue="0" MaxValue="100" ValueChangedEvent="ntb_M_ValueChangedEvent" Width="40"/>
        <Label Content="K:" />
        <local:NumericTextBoxMS x:Name="ntb_K" Value="0" MinimumValue="0" MaxValue="100" ValueChangedEvent="ntb_K_ValueChangedEvent" Width="40"/>
    </StackPanel>
</UserControl>
